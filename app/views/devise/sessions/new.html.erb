<center><h1><font color="gray">Sign in</font></h1></center>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :class=>"linkscolor"  %><br />
  <%= f.email_field :email, :class=>"signup"%></div>
  <div><%= f.label :password, :class=>"linkscolor"  %><br />
  <%= f.password_field :password, :class=>"signup" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me , :class=>"linkscolor" %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "links" %>

